{
  "name": "dotfiles",
  "version": "1.0.0",
  "description": "Personal dotfiles managed with Dotbot",
  "private": true,
  "scripts": {
    "format": "prettier --write '**/*.{json,yml,yaml,md}'",
    "format:check": "prettier --check '**/*.{json,yml,yaml,md}'",
    "lint:shell": "shellcheck config/**/*.sh",
    "lint": "pnpm run format:check && pnpm run lint:shell",
    "prepare": "lefthook install"
  },
  "keywords": [
    "dotfiles"
  ],
  "author": "Jace Babin <jbabin91@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "lefthook": "latest",
    "prettier": "latest"
  }
}
